@model LoginVM

@{
    ViewData["Title"] = "Logowanie";
}

<div class="flex justify-center align-middle">
    <fieldset class="fieldset bg-base-200 border-base-300 rounded-box w-xs border p-4">
        <legend class="fieldset-legend">Zaloguj się</legend>

        <form asp-action="Login" method="post" class="">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" class="input" name="returnUrl" value="@ViewData["ReturnUrl"]" />

            <label asp-for="Username" class="label"></label>
            <input asp-for="Username" class="input" />
            <span asp-validation-for="Username" class="text-danger"></span>

            <label asp-for="Password" class="label"></label>
            <input asp-for="Password" class="input" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>

            <label asp-for="RememberMe" class="label">
                <input asp-for="RememberMe" class="checkbox" />
            </label>

            <button type="submit" class="btn bg-primary">Zaloguj</button>
        </form>
    </fieldset>
</div>