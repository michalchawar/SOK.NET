@model SOK.Web.ViewModels.ParishManagement.ParishListViewModel
@{
    ViewData["Title"] = "Zarządzanie parafiami";
}

<div class="overflow-x-auto h-full">
    <div class="min-h-full w-full flex flex-col items-center justify-start px-10 py-6">
        <div class="flex flex-col items-center justify-center mb-6">
            <div class="flex items-center gap-3 mb-2">
                <i class="bi bi-building-fill-gear text-4xl text-primary"></i>
                <h2 class="text-center text-2xl font-bold">
                    Zarządzanie parafiami
                </h2>
            </div>
            <h4 class="text-center text-md opacity-70">
                Wybierz parafię, do której chcesz uzyskać dostęp jako superadministrator.
            </h4>
        </div>

        <div class="w-full max-w-5xl mb-4 flex justify-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Utwórz nową parafię
            </a>
        </div>

        @if (string.IsNullOrEmpty(Model.SelectedParishUid))
        {
            <div class="alert alert-warning mb-6 max-w-4xl">
                <i class="bi bi-exclamation-triangle"></i>
                <div class="flex-1">
                    <span class="font-semibold">Brak wybranej parafii</span>
                    <p class="text-sm mt-1">Musisz wybrać parafię, aby uzyskać dostęp do jej danych i funkcji systemu.</p>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info mb-6 max-w-4xl">
                <i class="bi bi-info-circle"></i>
                <div class="flex-1">
                    <span class="font-semibold">Obecnie wybrana parafia:</span>
                    <span>
                        @(Model.Parishes.FirstOrDefault(p => p.UniqueId == Model.SelectedParishUid)?.Name ?? "Nieznana")
                    </span>
                </div>
                <form asp-action="ClearSelection" method="post" class="inline">
                    <button type="submit" class="btn btn-sm btn-ghost">
                        <i class="bi bi-x-circle"></i>
                        Wyczyść wybór
                    </button>
                </form>
            </div>
        }

        <div class="divider self-auto w-5/6"></div>

        @if (Model.Parishes == null || !Model.Parishes.Any())
        {
            <div class="flex flex-col items-center justify-center gap-4 py-12">
                <i class="bi bi-inbox text-6xl opacity-30"></i>
                <h3 class="text-xl font-semibold opacity-70">
                    Brak parafii w systemie
                </h3>
                <p class="opacity-60">
                    Nie znaleziono żadnych parafii. Utwórz pierwszą parafię, aby rozpocząć.
                </p>
            </div>
        }
        else
        {
            <div class="w-full max-w-5xl">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    @foreach (var parish in Model.Parishes)
                    {
                        var isSelected = parish.UniqueId == Model.SelectedParishUid;
                        
                        <div class="card bg-base-200 shadow-md hover:shadow-lg transition-all @(isSelected ? "ring-2 ring-primary" : "")">
                            <div class="card-body">
                                <div class="flex items-start justify-between">
                                    <h3 class="card-title text-lg flex-1">
                                        @parish.Name
                                        @if (isSelected)
                                        {
                                            <span class="badge badge-primary badge-sm ml-2">Aktywna</span>
                                        }
                                    </h3>
                                </div>
                                
                                <div class="text-xs opacity-60 font-mono mt-2">
                                    UID: @parish.UniqueId
                                </div>

                                <div class="card-actions justify-end mt-4 gap-2">
                                    <a asp-action="Edit" asp-route-id="@parish.Id" class="btn btn-ghost btn-sm">
                                        <i class="bi bi-pencil-fill"></i>
                                        Edytuj
                                    </a>
                                    @if (!isSelected)
                                    {
                                        <form asp-action="SelectParish" method="post" class="flex-1">
                                            <input type="hidden" name="parishUid" value="@parish.UniqueId" />
                                            <button type="submit" class="btn btn-primary btn-sm w-full">
                                                <i class="bi bi-box-arrow-in-right"></i>
                                                Przełącz
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button disabled class="btn btn-sm btn-disabled flex-1">
                                            <i class="bi bi-check-circle"></i>
                                            Wybrana
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>
