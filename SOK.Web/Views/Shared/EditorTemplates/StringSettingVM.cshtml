@model StringSettingVM

<label asp-for="Value" class="w-full flex flex-col gap-1">
    <h4 class="text-xl font-medium">@Model.Name</h4>
    <p class="text-sm opacity-70 mb-2">@Model.Description</p>
    <input asp-for="Value" name="@Model.Key" id="@Model.Key.Replace(".", "_")" type="@Model.Type.ToString().ToLower()" placeholder="@Model.Hint" autocomplete="off"
        readonly='@(Model.Readonly ? "readonly" : null)' disabled='@(Model.Readonly ? "disabled" : null)'
        class="input input-lg w-full @(Model.Readonly ? "input-ghost" : "")" />
    <span asp-validation-for="Value" class="text-error text-sm"></span>
</label>