@using SOK.Application.Common.DTO
@using SOK.Application.Common.Helpers
@model PatchSubmissionDto
<!-- Modal zgłoszenia - reużywalny partial -->
<div id="submission-modal-app" v-cloak>
    <div class="modal" :class="{ 'modal-open': isOpen }">
        <div class="modal-box w-11/12 max-w-5xl max-h-11/12 flex flex-col">
            <!-- Header -->
            <div class="grid grid-cols-2 justify-center lg:flex lg:justify-between lg:items-center gap-2">
                <h3 class="flex items-center font-bold text-2xl order-1 lg:order-none">
                    <span v-if="!isEditing">Szczegóły zgłoszenia</span>
                    <span v-else class="text-warning">Edycja zgłoszenia</span>
                </h3>

                <!-- Akcje edycji -->
                <div class="col-span-full flex-1 flex justify-between items-center gap-2 order-3 lg:order-none">
                    <div v-if="isEditing && edit.email" class="flex items-center gap-3 lg:ms-auto lg:me-0">
                        <label class="label">
                            <span class="text-sm font-medium opacity-50">MAIL:</span>
                            <input type="checkbox" class="toggle checked:toggle-primary" :disabled="!hasEmailChanges"
                                v-model="sendDataChangeEmail" />
                        </label>
                        <button @@click="previewDataChangeEmail"
                            :disabled="!hasEmailChanges || !sendDataChangeEmail || !isValidEmail(edit.email)"
                            class="btn btn-primary btn-sm">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                    <div class="flex gap-2 lg:ms-auto">
                        <button v-if="isEditing" @@click="cancelEdit" class="btn btn-outline btn-sm">Anuluj</button>
                        <button v-if="isEditing" @@click="save" :disabled="isSaving" class="btn btn-success btn-sm">
                            <span v-if="!isSaving"><i class="bi bi-check"></i> Zapisz</span>
                            <span v-else class="loading loading-spinner"></span>
                        </button>
                    </div>
                </div>

                <!-- Zarządzanie -->
                <div class="order-2 lg:order-none flex justify-end gap-2 items-center">
                    <button v-if="!isEditing" @@click="startEdit" class="btn btn-primary btn-sm">
                        <i class="bi bi-pencil"></i> Edytuj
                    </button>
                    <div class="dropdown dropdown-bottom dropdown-end">
                        <div tabindex="0" role="button" class="btn btn-ghost size-10"><i
                                class="bi bi-three-dots-vertical text-lg "></i></div>
                        <ul tabindex="-1"
                            class="dropdown-content menu bg-base-100 rounded-box z-1 w-52 p-2 gap-y-0.5 shadow-sm">
                            <li v-if="isEditing && sendDataChangeEmail">
                                <button @@click="previewDataChangeEmail" :disabled="!hasEmailChanges"   
                                    class="bg-primary hover:bg-primary/50 text-white disabled:text-base-content/50 disabled:cursor-not-allowed disabled:bg-base-300/50">
                                    <i class="bi bi-arrow-left-right"></i> Zobacz podgląd maila
                                </button>
                            </li>
                            <li>
                                <button @@click="openEmailModal"
                                    :disabled="data === null || !data.submitter.email || isEditing"
                                    class="disabled:text-base-content/50 disabled:cursor-not-allowed disabled:bg-base-300/50"
                                    :class="{ 'tooltip tooltip-left': (data && !data.submitter.email) || isEditing }"
                                    :data-tip="isEditing ? 'Zakończ edycję, aby wysłać email' : data && !data.submitter.email ? 'Brak adresu email zgłaszającego' : ''">
                                    <i class="bi bi-envelope-arrow-up"></i> Wyślij maila
                                </button>
                            </li>
                            <li>
                                <a :href="`${parishUid}/submissions/panel/${data?.uniqueId}?accessToken=${data?.accessToken}`"
                                    target="_blank" :disabled="data === null">
                                    <i class="bi bi-file-person"></i> Panel zgłoszenia
                                </a>
                            </li>
                            <li>
                                <button :disabled="data === null || !data.hasFormSubmission" @@click="showFormData"
                                    class="disabled:text-base-content/50 disabled:cursor-not-allowed disabled:bg-base-300/50">
                                    <i class="bi bi-file-earmark-text"></i> Dane z formularza
                                </button>
                            </li>
                        </ul>
                    </div>
                    <!-- Zamknij -->
                    <button @@click="close" class="btn size-10 btn-ghost"><i class="bi bi-x-lg text-lg"></i></button>
                </div>
            </div>

            <div class="divider my-2"></div>

            <!-- Body -->
            <div class="flex-1 overflow-y-scroll">
                <!-- Loading -->
                <div v-if="isLoading" class="flex justify-center py-12">
                    <span class="loading loading-spinner loading-lg"></span>
                </div>
                <!-- Error -->
                <div v-else-if="error" class="alert alert-error">
                    <span>{{ error }}</span>
                </div>
                <!-- Content -->
                <div v-else-if="data">
                    <!form id="container-form" class="space-y-4" @@submit.prevent.stop>
                        <!-- Save message -->
                        <div v-if="saveMsg"
                            :class="['alert', saveMsg.type === 'success' ? 'alert-success' : 'alert-error']">
                            {{ saveMsg.text }}
                        </div>
                        <!-- Dane zgłoszenia -->
                        <div
                            class="grid grid-cols-1 lg:grid-cols-2 lg:[grid-template-areas:'a_b''a_d''c_d'] lg:grid-rows-[min-content_1fr_min-content] items-start gap-4">
                            <!-- Zgłaszający -->
                            <div class="card bg-base-200 lg:[grid-area:a]">
                                <div class="card-body">
                                    <h4 class="card-title"><i class="bi bi-person-fill"></i> Zgłaszający</h4>
                                    <div v-if="!isEditing" class="grid grid-cols-1 md:grid-cols-2 gap-4 text-lg">
                                        <div><span class="text-sm opacity-70">Imię:</span>
                                            <p class="font-semibold">{{ data.submitter.name }}</p>
                                        </div>
                                        <div><span class="text-sm opacity-70">Nazwisko:</span>
                                            <p class="font-semibold">{{ data.submitter.surname }}</p>
                                        </div>
                                        <div><span class="text-sm opacity-70">Email:</span>
                                            <p>{{ data.submitter.email || '—' }}</p>
                                        </div>
                                        <div><span class="text-sm opacity-70">Telefon:</span>
                                            <p>{{ data.submitter.phone || '—' }}</p>
                                        </div>
                                    </div>
                                    <div v-else class="grid grid-cols-2 gap-4">
                                        <div>
                                            <input asp-for="Name" v-model="edit.name"
                                                class="input aria-invalid:input-error" placeholder="Imię" />
                                            <span asp-validation-for="Name" class="text-sm text-error"></span>
                                        </div>
                                        <div>
                                            <input asp-for="Surname" v-model="edit.surname"
                                                class="input aria-invalid:input-error" placeholder="Nazwisko" />
                                            <span asp-validation-for="Surname" class="text-sm text-error"></span>
                                        </div>
                                        <div>
                                            <input asp-for="Email" v-model="edit.email" type="email"
                                                class="input aria-invalid:input-error" placeholder="Email" />
                                            <span asp-validation-for="Email" class="text-sm text-error"></span>
                                        </div>
                                        <div>
                                            <input asp-for="Phone" v-model="edit.phone"
                                                class="input aria-invalid:input-error" placeholder="Telefon" />
                                            <span asp-validation-for="Phone" class="text-sm text-error"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Adres -->
                            <div class="card bg-base-200 lg:[grid-area:b]">
                                <div class="card-body">
                                    <h4 class="card-title"><i class="bi bi-geo-alt-fill"></i> Adres</h4>
                                    <div v-if="!isEditing">
                                        <p class="text-lg font-semibold">{{ data.address.streetType }} {{
                                            data.address.streetName }} {{ data.address.buildingNumber }}{{
                                            data.address.buildingLetter }} / {{ data.address.apartmentNumber }}{{
                                            data.address.apartmentLetter }}</p>
                                        <p class="text-sm opacity-70">{{ data.address.cityName }}</p>
                                    </div>
                                    <div v-else class="space-y-3">
                                        <label class="floating-label">
                                            <span>Ulica</span>
                                            <select id="edit-street-select" class="select w-full"
                                                v-model="edit.streetId">
                                                <option disabled selected value="0">--Wybierz--</option>
                                                <option v-for="street in streets" :value="street.id">{{ street.type }}
                                                    {{ street.name }}</option>
                                            </select>
                                        </label>
                                        <div class="grid grid-cols-2 gap-3">
                                            <label asp-for="BuildingId" class="floating-label">
                                                <span>Budynek</span>
                                                <select asp-for="BuildingId" id="edit-building-select" class="select"
                                                    v-model="edit.buildingId">
                                                    <option disabled selected value="0">--Wybierz--</option>
                                                </select>
                                                <span asp-validation-for="BuildingId" class="text-error"></span>
                                            </label>
                                            <label asp-for="Apartment" class="floating-label">
                                                <span>Mieszkanie</span>
                                                <input asp-for="Apartment" v-model="edit.apartment" class="input"
                                                    placeholder="np. 12a" />
                                                <span asp-validation-for="Apartment" class="text-error"></span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Notatki i Statusy -->
                            <div class="card bg-base-200 lg:[grid-area:c]">
                                <div class="card-body">
                                    <div class="flex gap-3 items-center justify-between">
                                        <h4 class="card-title"><i class="bi bi-chat-left-text"></i> Notatki</h4>
                                        <p v-if="!isEditing" class="grow-0 badge badge-lg"
                                            :class="notesStatusClass(data.notesStatus)">
                                            {{ notesStatusLabel(data.notesStatus) }}</p>
                                        <div v-else class="dropdown dropdown-end">
                                            <div tabindex="0" :class="notesStatusButtonClass(edit.notesStatus)"
                                                class="btn btn-soft min-w-18 flex! items-center justify-between gap-4 rounded">
                                                <div class="flex items-center gap-2 w-full">
                                                    <i class="bi ml-auto"
                                                        :class="`bi-${notesStatusIcon(edit.notesStatus)}`"></i>
                                                    <span>{{ notesStatusLabel(edit.notesStatus) }}</span>
                                                </div>
                                                <i class="bi bi-caret-down-fill ml-auto"></i>
                                            </div>
                                            <ul tabindex="-1"
                                                class="dropdown-content bg-base-300 rounded-box z-10 p-2 min-w-16 space-y-2 shadow-lg">
                                                <li>
                                                    <button @@click="edit.notesStatus = 0"
                                                        class="btn btn-neutral text-start h-9 w-full">N/A</button>
                                                </li>
                                                <li>
                                                    <button @@click="edit.notesStatus = 1"
                                                        class="btn btn-warning text-start h-9 w-full">Oczekuje</button>
                                                </li>
                                                <li>
                                                    <button @@click="edit.notesStatus = 2"
                                                        class="btn btn-error text-start h-9 w-full">Odrzucone</button>
                                                </li>
                                                <li>
                                                    <button @@click="edit.notesStatus = 3"
                                                        class="btn btn-success text-start h-9 w-full">Zaakceptowane</button>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="space-y-3">
                                        <div>
                                            <label class="label"><span class="label-text font-semibold">Notatka
                                                    zgłaszającego:</span></label>
                                            <p v-if="!isEditing" class="p-3 bg-base-300 whitespace-pre-wrap rounded">{{
                                                data.submitterNotes || '—' }}</p>
                                            <textarea v-else v-model="edit.submitterNotes" class="textarea w-full"
                                                rows="2" maxlength="500" @@input="onSubmitterNotesInput"></textarea>
                                        </div>
                                        <div>
                                            <label class="label"><span class="label-text font-semibold">Wiadomość dla
                                                    zgłaszającego:</span></label>
                                            <p v-if="!isEditing" class="p-3 bg-base-300 whitespace-pre-wrap rounded">{{
                                                data.adminMessage || '—' }}</p>
                                            <textarea v-else v-model="edit.adminMessage" class="textarea w-full"
                                                rows="2" maxlength="500"></textarea>
                                        </div>
                                        <div>
                                            <label class="label"><span class="label-text font-semibold">Notatka
                                                    wewnętrzna:</span></label>
                                            <p v-if="!isEditing" class="p-3 bg-base-300 whitespace-pre-wrap rounded">{{
                                                data.adminNotes || '—' }}</p>
                                            <textarea v-else v-model="edit.adminNotes" class="textarea w-full" rows="2"
                                                maxlength="500"></textarea>
                                        </div>

                                        <div class="divider my-2"></div>

                                        <div class="">
                                            <label class="label"><span class="label-text font-semibold">Metoda
                                                    zgłoszenia:</span></label>
                                            <p v-if="!isEditing" class="badge badge-lg">{{
                                                submitMethodLabel(data.submitMethod) }}</p>
                                            <select v-else v-model="edit.submitMethod" class="select w-full">
                                                <option value="0">Nie zarejestrowano</option>
                                                <option value="1">Formularz papierowy</option>
                                                <option value="2">Formularz internetowy</option>
                                                <option value="3">Telefonicznie</option>
                                                <option value="4">Osobiście</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Harmonogram i wizyta -->
                            <div class="card bg-base-200 lg:[grid-area:d]">
                                <div class="card-body gap-y-3">
                                    <div class="flex gap-3 items-center justify-between">
                                        <h4 class="card-title"><i class="bi bi-calendar2-plus"></i> Wizyta</h4>
                                        <p class="grow-0 badge badge-lg" :class="visitStatusClass(data.visit.status)">
                                            {{ visitStatusLabel(data.visit.status) }}
                                        </p>
                                    </div>
                                    <div>
                                        <label class="label">
                                            <span class="label-text font-semibold">
                                                Harmonogram:
                                            </span>
                                        </label>
                                        <div v-if="!isEditing" class="flex items-center gap-2">
                                            <span class="text-lg font-semibold">{{ data.visit.schedule.name || 'Nie przypisano' }}</span>
                                            <div class="size-5 rounded-full" :style="{ backgroundColor: data.visit.schedule.color }"></div>
                                        </div>
                                        <div v-else class="flex gap-2">
                                            <button v-for="schedule in schedules" :key="schedule.id"
                                                @@click="edit.scheduleId = schedule.id" type="button"
                                                class="btn border-(--schedule-color)"
                                                :class="edit.scheduleId === schedule.id ? 'bg-(--schedule-color)! text-(--schedule-contrast-color)!' : 'btn-dash'"
                                                :style="{ '--schedule-color': schedule.color, '--schedule-contrast-color': getContrastColor(schedule.color) }">
                                                <span>{{ schedule.name }}</span>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="divider my-0"></div>
                                    <div>
                                        <div v-if="data.visit.status === 0" class="flex flex-col items-center gap-1">
                                            <i class="bi bi-clock-history text-3xl opacity-50"></i>
                                            <span class="text-lg font-normal opacity-80">Oczekuje na zaplanowanie</span>
                                        </div>
                                        <div v-else class="space-y-3">
                                            <div v-if="!data.visit.dateVisible" class="alert alert-error alert-soft">
                                                <i class="bi bi-exclamation-triangle-fill text-lg"></i>
                                                <div class="flex flex-col gap-1 items-center md:items-start">
                                                    <span class="text-base font-medium">Zgłaszający nie widzi poniższej informacji.</span>
                                                    <span v-if="!isEditing" class="text-sm">
                                                        Opublikuj agendę w edytorze, aby jej przypisania były widoczne.
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="flex items-center justify-between bg-base-300 p-5 rounded-md gap-3">
                                                <div v-if="data.visit.status === 1"
                                                    class="flex items-center justify-start gap-2">
                                                    <i
                                                        class="bi bi-calendar-check-fill text-3xl text-success/75"></i>
                                                    <span class="text-xl font-semibold">Zaplanowana</span>
                                                </div>
                                                <div class="text-end">
                                                    <p class="text-sm opacity-80">
                                                        {{ formatDateWeekDay(data.visit.plannedDate) }}
                                                    </p>
                                                    <p class="text-lg font-semibold">
                                                        {{ formatDate(data.visit.plannedDate) }}
                                                    </p>
                                                    <p class="text-sm opacity-70">
                                                        {{ data.visit.ordinalNumber }} na liście
                                                    </p>
                                                </div>
                                            </div>
                                            <a v-if="!isEditing" :href="`/Calendar/AgendaEditor/${data.visit.agendaId}`"
                                                class="btn btn-accent btn-soft w-full justify-center" target="_blank">
                                                <i class="bi bi-journal-text"></i> Przejdź do edytora agendy
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Info -->
                        <div class="text-sm opacity-70">
                            <p>ID: {{ data.id }} | UID: {{ data.uniqueId }}</p>
                            <p>Zgłoszono: {{ formatDateLong(data.submitTime) }}</p>
                        </div>
                    </!form>
                </div>
            </div>
        </div>
        <div class="modal-backdrop" @@click="close"></div>
    </div>

    <!-- Email Modal -->
    <div :class="['modal', emailModalOpen && 'modal-open']">
        <div class="modal-box max-w-4xl">
            <h3 class="text-lg font-bold mb-4">
                <span v-if="emailStep === 'select'">Wybierz typ emaila do wysłania</span>
                <span v-else-if="emailStep === 'preview'">Podgląd emaila</span>
            </h3>

            <!-- Step 1: Wybór typu emaila -->
            <div v-if="emailStep === 'select'" class="space-y-4">
                <!-- Confirmation Email -->
                <div @@click="selectEmailType('confirmation')"
                    class="card bg-base-200 hover:bg-base-300 cursor-pointer transition-colors border-2 border-transparent hover:border-success">
                    <div class="card-body">
                        <div class="flex items-start gap-4">
                            <div class="text-4xl">
                                <i class="bi bi-check-circle text-success"></i>
                            </div>
                            <div class="flex-1">
                                <h4 class="font-bold text-lg mb-2">Email potwierdzający zgłoszenie</h4>
                                <p class="text-sm opacity-70">
                                    Wyśle email z potwierdzeniem przyjęcia zgłoszenia, zawierający link do panelu
                                    zgłoszenia.
                                </p>
                                <div class="mt-3 text-xs opacity-50">
                                    Odbiorca: 
                                    <span class="font-mono">
                                        {{ data?.submitter?.email || 'brak adresu email' }}
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Visit Planned Email -->
                <div @@click="selectEmailType('visit_planned')"
                    class="card bg-base-200 hover:bg-base-300 cursor-pointer transition-colors border-2 border-transparent hover:border-info">
                    <div class="card-body">
                        <div class="flex items-start gap-4">
                            <div class="text-4xl">
                                <i class="bi bi-calendar2-check text-info"></i>
                            </div>
                            <div class="flex-1">
                                <h4 class="font-bold text-lg mb-2">Email z informacją o zaplanowaniu zgłoszenia</h4>
                                <p class="text-sm opacity-70">
                                    Wyśle email z informacją o przypisaniu zgłoszenia do konkretnego planu i agendy.
                                </p>
                                <div class="mt-3 text-xs opacity-50">
                                    Odbiorca: <span class="font-mono">{{ data?.submitter?.email || 'brak adresu email'
                                        }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Invalid Email Notification -->
                <div class="card bg-base-200 border-2 border-transparent">
                    <div class="card-body">
                        <div class="flex items-start gap-4">
                            <div class="text-4xl">
                                <i class="bi bi-exclamation-triangle text-warning"></i>
                            </div>
                            <div class="flex-1">
                                <h4 class="font-bold text-lg mb-2">Powiadomienie o nieprawidłowym emailu</h4>
                                <p class="text-sm opacity-70 mb-3">
                                    Wyśle email na samodzielnie określony adres z zapytaniem o poprawienie adresu email
                                    zgłaszającego.
                                </p>
                                <div class="form-control">
                                    <label class="label">
                                        <span class="label-text">Potencjalny adres email odbiorcy:</span>
                                    </label>
                                    <div class="flex gap-2">
                                        <input v-model="invalidEmailTo" type="email"
                                            placeholder="nowy.email@example.com" class="input input-bordered flex-1"
                                            @@keyup.enter="selectEmailType('invalid')" />
                                        <button @@click="selectEmailType('invalid')"
                                            :disabled="!invalidEmailTo || !isValidEmail(invalidEmailTo)"
                                            class="btn btn-primary">
                                            Dalej <i class="bi bi-arrow-right ml-1"></i>
                                        </button>
                                    </div>
                                    <label class="label" v-if="invalidEmailTo && !isValidEmail(invalidEmailTo)">
                                        <span class="label-text-alt text-error">Nieprawidłowy format adresu email</span>
                                    </label>
                                </div>
                                <div class="mt-3 text-xs opacity-50">
                                    Stary email w systemie: <span class="font-mono">{{ data?.submitter?.email || 'brak'
                                        }}</span>
                                </div>
                                <div class="mt-3 text-xs opacity-50"
                                    v-if="invalidEmailTo && isValidEmail(invalidEmailTo)">
                                    Adres odbiorcy: <span class="font-mono">{{ invalidEmailTo }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Data Change Email (only if editing) -->
                <div v-if="isEditing && sendDataChangeEmail" @@click="previewDataChangeEmail"
                    class="card bg-base-200 hover:bg-base-300 cursor-pointer transition-colors border-2 border-transparent hover:border-info">
                    <div class="card-body">
                        <div class="flex items-start gap-4">
                            <div class="text-4xl">
                                <i class="bi bi-info-circle text-info"></i>
                            </div>
                            <div class="flex-1">
                                <h4 class="font-bold text-lg mb-2">Podgląd emaila o zmianach</h4>
                                <p class="text-sm opacity-70">
                                    Zobacz jak będzie wyglądał email informujący o wprowadzonych zmianach w zgłoszeniu.
                                </p>
                                <div class="mt-3 text-xs opacity-50">
                                    Odbiorca: <span class="font-mono">{{ data?.submitter?.email || 'brak adresu email'
                                        }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Step 2: Podgląd emaila -->
            <div v-else-if="emailStep === 'preview'">
                <div v-if="emailPreviewLoading" class="flex justify-center py-12">
                    <span class="loading loading-spinner loading-lg"></span>
                </div>

                <div v-else-if="emailPreviewError" class="alert alert-error mb-4">
                    <i class="bi bi-exclamation-triangle"></i>
                    <span>{{ emailPreviewError }}</span>
                </div>

                <div v-else class="space-y-4">
                    <!-- Informacje o emailu -->
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <div class="flex-1">
                            <div class="font-bold">
                                {{ emailTypeLabels[selectedEmailType] }}
                            </div>
                            <div class="text-sm opacity-80">
                                Odbiorca: <span class="font-mono">{{ emailRecipient }}</span>
                            </div>
                        </div>
                    </div>

                    <!-- Podgląd HTML -->
                    <div class="border rounded-lg overflow-hidden bg-white">
                        <div class="bg-base-200 px-4 py-2 text-sm font-semibold border-b">
                            Podgląd treści emaila:
                        </div>
