@{
    ViewData["Title"] = "Zgłoszenie wysłane";
    Layout = "_LayoutPublic";
}

<div class="w-full max-w-2xl text-center">
    <!-- Ikona sukcesu -->
    <div class="mb-8 text-4xl text-success">
        <i class="bi bi-check-circle"></i>
    </div>

    <!-- Komunikat -->
    <div class="bg-base-200 rounded-lg p-8 shadow-md">
        <h1 class="text-4xl font-bold font-nunito-sans mb-4 text-success">Dziękujemy!</h1>
        <p class="text-xl mb-6">Twoje zgłoszenie zostało pomyślnie zarejestrowane.</p>

        <div class="alert alert-info shadow-lg mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                class="stroke-current shrink-0 w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div class="text-left">
                <p class="font-semibold">Co dalej?</p>
                <p class="text-sm">
                    Twoje zgłoszenie zostało zarejestrowane w systemie.
                    W najbliższym czasie powinieneś otrzymać również potwierdzenie mailowe i link do panelu zgłoszenia.
                </p>
            </div>
        </div>

        <div class="flex justify-center items-center gap-4 mt-6">
            <a asp-action="SubmissionPanel" asp-controller="PublicForm" asp-route-parishUid="@ViewData["ParishUid"]" 
                asp-route-submissionUid="@ViewData["SubmissionUid"]"
                asp-route-accessToken="@ViewData["SubmissionAccessToken"]"
                class="btn btn-primary">
                Panel zgłoszenia
            </a>
            <a asp-action="New" asp-controller="PublicForm" asp-route-parishUid="@ViewData["ParishUid"]"
                class="btn btn-neutral">
                Dodaj nowe zgłoszenie
            </a>
        </div>
    </div>
</div>